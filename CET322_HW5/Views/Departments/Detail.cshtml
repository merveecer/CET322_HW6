@model CET322_HW5.Models.DepartmentModel

@{
	ViewData["Title"] = "Department Detail";
}

<div class="all-title-box">
	<div class="container text-center">
		<h1>Department Detail</h1>
	</div>
</div>

<div id="overviews" class="section wb">
	<div class="container">

		<hr class="invis">
		<div class="row">
			<div class="col-md-12">
				<div class="row">
					<div class="col-md-3">
						<h3>@Html.DisplayNameFor(model => model.Name)</h3>
					</div>
					<div class="col-md-7">
						<h3>@Html.DisplayFor(model => model.Name)</h3>
					</div>
					<div class="col-md-3 pd">
						<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light btn-radius btn-brd grd1 btn-block" style="text-align:center;"><i class="fa fa-edit"></i>  Edit </a>

					</div>
				</div>
			</div>

			<div class="col-md-12">
				<div class="col-md-12">
					<br>
					<h3><b>Students List</b></h3>
				</div>
				<div class="col-md-12">
					<table class="table">
						<thead>
							<tr>
								<th>Student Name</th>
								<th>Student Surname</th>
								<th>Student Email</th>
								<th>Student Number</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in Model.Students) {
								<tr>
									<td>
										@Html.DisplayFor(modelItem => item.Name)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Surname)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.Email)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.SchoolNumber)
									</td>

								</tr>
							}
						</tbody>
					</table>
				</div>
			</div>

			<div class="col-md-5 pd">
				<a asp-action="DepartmentList" class="btn btn-light btn-radius btn-brd grd1 btn-block"><span>Back To The Department List</span></a>

			</div>
		</div>
	</div>
</div>
