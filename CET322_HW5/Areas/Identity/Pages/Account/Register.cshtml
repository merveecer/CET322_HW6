								@Html.TextBoxFor(x => x.Input.City, null, new { @class = "form-control", @style = "color:black", @placeholder = @Html.DisplayNameFor(x => x.Input.City) })
								<span asp-validation-for="Input.City" class="text-danger"></span>
							</div>
							<div class="col-lg-3 col-md-6 col-sm-6">
								<label>
									@Html.DisplayNameFor(x => x.Input.Email)
								</label>
							</div>
							<div class="col-lg-9 col-md-6 col-sm-6">
								@Html.TextBoxFor(x => x.Input.Email, null, new { @class = "form-control", @style = "color:black", @placeholder = @Html.DisplayNameFor(x => x.Input.Email) })
								<span asp-validation-for="Input.Email" class="text-danger"></span>
							</div>

							<div class="col-lg-3 col-md-6 col-sm-6">
								<label>
									@Html.DisplayNameFor(x => x.Input.Password)
								</label>
							</div>
							<div class="col-lg-9 col-md-6 col-md-6">
