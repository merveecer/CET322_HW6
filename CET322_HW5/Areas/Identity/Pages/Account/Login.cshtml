<div class="all-title-box">
	<div class="container text-center">
		<h1>Use a local account to log in.</h1>

	</div>
</div>


<div id="contact" class="section wb">
	<div class="container">

		<div class="row">
			<div class="col-xl-12 col-md-12 col-sm-12">
				<div class="contact_form" style="background-color:white">

					<div id="message"></div>
					<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
						<div asp-validation-summary="All" class="text-danger"></div>
						<div class="row row-fluid">

							<div class="col-lg-3 col-md-6 col-sm-6">
								<label>
									@Html.DisplayNameFor(x => x.Input.SchoolNo)
								</label>
							</div>
							<div class="col-lg-9 col-md-6 col-sm-6">
								@Html.TextBoxFor(x => x.Input.SchoolNo, null, new { @class = "form-control", @style = "color:black", @placeholder = @Html.DisplayNameFor(x => x.Input.SchoolNo) })
								<span asp-validation-for="Input.SchoolNo" class="text-danger"></span>
							</div>

							<div class="col-lg-3 col-md-6 col-sm-6">
								<label>
									@Html.DisplayNameFor(x => x.Input.Email)
								</label>
							</div>
							<div class="col-lg-9 col-md-6 col-sm-6">
								@Html.TextBoxFor(x => x.Input.Email, null, new { @class = "form-control", @style = "color:black", @placeholder = @Html.DisplayNameFor(x => x.Input.Email) })
								<span asp-validation-for="Input.Email" class="text-danger"></span>
							</div>

							<div class="col-lg-3 col-md-6 col-sm-6">
								<label>
									@Html.DisplayNameFor(x => x.Input.Password)
								</label>
							</div>
							<div class="col-lg-9 col-md-6 col-md-6">
								<input asp-for="Input.Password" class="form-control" style="color:black" placeholder=@Html.DisplayNameFor(x => x.Input.Password) />

								<span asp-validation-for="Input.Password" class="text-danger"></span>

							</div>
							<div class="col-lg-12 col-md-12 col-md-12 form-group">
								<div class="checkbox">
									<label asp-for="Input.RememberMe">
										<input asp-for="Input.RememberMe" />
										@Html.DisplayNameFor(m => m.Input.RememberMe)
									</label>
								</div>
							</div>

							<div class="text-center pd">
								<button type="submit" class="btn btn-light btn-radius btn-brd grd1 btn-block"> Log In</button>

							</div>
							<div class="pd">
								<button type="button" id="cancelbtn" class="btn btn-light btn-radius btn-brd grd1 btn-block">
									<i class="fa fa-cancel"></i>  Cancel
								</button>
							</div>
							<div class="col-lg-12 col-md-12 col-md-12 form-group">
								<p>
									<a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
								</p>
								<p>
									<a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
								</p>
							</div>
						</div>
					</form>
				</div>
			</div><!-- end col -->
			<div class="col-md-6 col-md-offset-2">
				<section>
					<h4>Use another service to log in.</h4>
					<hr />
					@{
						if ((Model.ExternalLogins?.Count ?? 0) == 0) {
							<div>
								<p>
									There are no external authentication services configured. See <a href="https://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
									for details on setting up this ASP.NET application to support logging in via external services.
								</p>
							</div>
						} else {
							<form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
								<div>
									<p>
										@foreach (var provider in Model.ExternalLogins) {
											<button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
										}
									</p>
								</div>
							</form>
						}
					}
				</section>
			</div>

		</div><!-- end row -->
	</div><!-- end container -->
</div><!-- end section -->
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script type="text/javascript">
     $(document).ready(function () {
            $("#cancelbtn").click(function () {
                window.location = "@Url.Action("Index", "Home")";
            });
        });
	</script>
}
